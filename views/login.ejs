<body>
    <form action="/login" method="post">
        <h2>Welcome back to our lovely website Einsteiner</h2>
        <div class="input-container">
            <input type="email" name="loginEmail" placeholder="please enter an email address">
            <input type="password" name="loginPassword" placeholder="please enter a password">
        </div>
        <h4>forgot your password? <a href="/resetPassword">Reset Password</a></h4>
        <button type="submit" class="submit">Log in</button>
        <h4>Don't have an account yet? <a href="/">Sign up</a></h4>
        <h5>or sign in with</h5>
        <div class="buttons-container">
            <button>GitHub</button>
            <button>Google</button>
            <button>Facebook</button>
        </div>
    </form>

</body>

